local string_builder = require("@util/string_builder")

type StringBuilder = string_builder.StringBuilder

local function append_headers(builder: StringBuilder)
	builder:append_line("--!strict")
	builder:append_line("--!native")
	builder:append_line("--!optimize 2")
	builder:append_line(`--file generated by blink {_G.VERSION or "dev"} (https://github.com/1Axen/blink)`)
	builder:append_line("--this file is not meant to be edited")
end

return append_headers
